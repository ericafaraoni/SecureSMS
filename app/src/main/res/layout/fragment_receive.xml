<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:duplicateParentState="false"
    android:gravity="top|center"
    android:longClickable="false"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ssms.securesms.ReceiveTextActivity" >

    <TextView
        android:id="@+id/textViewReceiveTextActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:gravity="center_horizontal"
        android:text="@string/receive_activity_textview0"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/okButtonMsg1ReceiveTextActivity"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp"

        android:text="@string/ok"
        android:onClick="buttonAction" />

    <Button
        android:id="@+id/okButtonMsg2ReceiveTextActivity"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/okButtonMsg1ReceiveTextActivity"
        android:layout_alignBottom="@+id/okButtonMsg1ReceiveTextActivity"
        android:layout_alignLeft="@+id/okButtonMsg1ReceiveTextActivity"
        android:text="@string/ok"
        android:visibility="invisible"
        android:onClick="buttonAction"/>

    <Button
        android:id="@+id/endButtonReceiveTextActivity"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/okButtonMsg1ReceiveTextActivity"
        android:layout_alignBottom="@+id/okButtonMsg1ReceiveTextActivity"
        android:layout_alignLeft="@+id/okButtonMsg1ReceiveTextActivity"
        android:text="@string/back_to_main_activity"
        android:visibility="invisible"
        android:onClick="buttonAction"/>



</RelativeLayout>