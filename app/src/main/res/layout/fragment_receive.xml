<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:duplicateParentState="false"
    android:gravity="top|center"
    android:longClickable="false"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textViewReceiveTextActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="14dp"
        android:gravity="center_horizontal"
        android:text="@string/receive_wait_message"
        android:textSize="18sp"
        android:padding="@dimen/activity_horizontal_margin" />

    <Button
        android:id="@+id/okButtonMsg1ReceiveTextActivity"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="160dp"
        android:backgroundTint="@color/colorButton"
        android:text="@string/msg_received"
        android:onClick="buttonAction" />

    <Button
        android:id="@+id/okButtonMsg2ReceiveTextActivity"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/okButtonMsg1ReceiveTextActivity"
        android:layout_alignBottom="@+id/okButtonMsg1ReceiveTextActivity"
        android:layout_alignLeft="@+id/okButtonMsg1ReceiveTextActivity"
        android:backgroundTint="@color/colorButton"
        android:text="@string/msg_received"
        android:visibility="invisible"
        android:onClick="buttonAction"/>

    <Button
        android:id="@+id/endButtonReceiveTextActivity"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/okButtonMsg1ReceiveTextActivity"
        android:layout_alignBottom="@+id/okButtonMsg1ReceiveTextActivity"
        android:layout_alignLeft="@+id/okButtonMsg1ReceiveTextActivity"
        android:backgroundTint="@color/colorButton"
        android:text="@string/back"
        android:visibility="invisible"
        android:onClick="buttonAction"/>

</RelativeLayout>