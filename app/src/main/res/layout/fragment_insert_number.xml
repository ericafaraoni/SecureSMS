<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ssms.securesms.PinActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/activity_pin_textview_text" />

    <TextView
        android:id="@+id/textViewActivity"
        android:layout_width="300sp"
        android:layout_height="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:gravity="center_horizontal"
        android:textSize="35sp" />

    <Button android:id="@+id/ButtonKeypad1Activity"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/textViewActivity"
        android:layout_below="@+id/textViewActivity"
        android:layout_marginTop="16dp"
        android:text="@string/key_board_1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button	android:id="@+id/ButtonKeypad2Activity"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/ButtonKeypad1Activity"
        android:layout_alignBottom="@+id/ButtonKeypad1Activity"
        android:layout_centerHorizontal="true"
        android:text="@string/key_board_2"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button	android:id="@+id/ButtonKeypad3Activity"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/ButtonKeypad2Activity"
        android:layout_alignBottom="@+id/ButtonKeypad2Activity"
        android:layout_alignRight="@+id/textViewActivity"
        android:text="@string/key_board_3"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ButtonKeypad4Activity"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/ButtonKeypad1Activity"
        android:layout_centerVertical="true"
        android:text="@string/key_board_4"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ButtonKeypad5Activity"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/ButtonKeypad4Activity"
        android:layout_alignBottom="@+id/ButtonKeypad4Activity"
        android:layout_alignLeft="@+id/ButtonKeypad2Activity"
        android:text="@string/key_board_5"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ButtonKeypad6Activity"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/ButtonKeypad5Activity"
        android:layout_alignBottom="@+id/ButtonKeypad5Activity"
        android:layout_alignLeft="@+id/ButtonKeypad3Activity"
        android:text="@string/key_board_6"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ButtonKeypad7Activity"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/ButtonKeypad4Activity"
        android:layout_below="@+id/ButtonKeypad4Activity"
        android:layout_marginTop="21dp"
        android:text="@string/key_board_7"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ButtonKeypad8Activity"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/ButtonKeypad7Activity"
        android:layout_alignBottom="@+id/ButtonKeypad7Activity"
        android:layout_alignLeft="@+id/ButtonKeypad5Activity"
        android:text="@string/key_board_8"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ButtonKeypad9Activity"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/ButtonKeypad8Activity"
        android:layout_alignBottom="@+id/ButtonKeypad8Activity"
        android:layout_alignLeft="@+id/ButtonKeypad6Activity"
        android:text="@string/key_board_9"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ButtonKeypadBackActivity"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/ButtonKeypad7Activity"
        android:layout_below="@+id/ButtonKeypad7Activity"
        android:layout_marginTop="16dp"
        android:text="@string/key_board_cancel"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ButtonKeypad0Activity"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/ButtonKeypadBackActivity"
        android:layout_alignBottom="@+id/ButtonKeypadBackActivity"
        android:layout_alignLeft="@+id/ButtonKeypad8Activity"
        android:text="@string/key_board_0"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ButtonKeypadOkActivity"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/ButtonKeypad0Activity"
        android:layout_alignBottom="@+id/ButtonKeypad0Activity"
        android:layout_alignLeft="@+id/ButtonKeypad9Activity"
        android:text="@string/ok"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>